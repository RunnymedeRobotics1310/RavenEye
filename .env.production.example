# RavenEye Environment Configuration
# Copy this file to .env and configure for your environment

# RavenBrain API Host URL
VITE_API_HOST=https://ravenbrain.team1310.ca

# JWT Signing Secret
JWT_GENERATOR_SIGNATURE_SECRET=change-me-jwt-secret

# Application Security
ENCRYPTION_SEED=change-me-encryption-seed
SUPERUSER_PASSWORD=change-me-superuser-password
REGISTRATION_SECRET=change-me-registration-secret

# FRC API Credentials
FRC_USER=your-frc-api-username
FRC_KEY=your-frc-api-key

COMPOSE_PROJECT_NAME=raveneye

# Mount Paths
RAVENEYE_CERTS=/C/Users/q/raveneye/certs
RAVENEYE_BACKUPS=/C/Users/q/raveneye/backups

# MySQL Configuration
MYSQL_ROOT_PASSWORD=your-mysql-root-password
MYSQL_DATABASE=ravenbrain
MYSQL_USER=rb
MYSQL_PASSWORD=your-mysql-rb-password

# Backup configuration (production only, optional)
BACKUP_INTERVAL_SECONDS=43200
#BACKUP_INTERVAL_SECONDS=86400
BACKUP_RETENTION_DAYS=60
