# RavenEye Environment Configuration
# Copy this file to .env and configure for your environment

# RavenBrain API Host URL
VITE_API_HOST=https://ravenbrain.team1310.ca

# JWT Signing Secret
JWT_GENERATOR_SIGNATURE_SECRET=change_me_jwt_secret

# Application Security
ENCRYPTION_SEED=change_me_encryption_seed
SUPERUSER_PASSWORD=change_me_superuser_password
REGISTRATION_SECRET=change_me_registration_secret

# FRC API Credentials
FRC_USER=your_frc_api_user_id
FRC_KEY=your_frc_api_key

# SSL Certificate Path (for nginx in Docker deployment)
# Local development: ./certs
DOCKER_SSL_CERT_PATH=/mnt/nas/raveneye/certs
DOCKER_MYSQL_DATA=/home/quentin/containers/ravenbrain/mysql
DOCKER_MYSQL_BACKUP=/mnt/nas/raveneye/backups

# MySQL Configuration
MYSQL_ROOT_PASSWORD=change_me_root_password
MYSQL_DATABASE=ravenbrain
MYSQL_USER=rb
MYSQL_PASSWORD=change_me_password

# Backup configuration (production only, optional)
BACKUP_INTERVAL_SECONDS=86400
BACKUP_RETENTION_DAYS=60

